{
    "compilerOptions": {
      "target": "ES6",                   
      "module": "CommonJS",                
      "outDir": "./dist",                 
      "rootDir": "./src",                  
      "strict": true,                      
      "esModuleInterop": true,             
      "forceConsistentCasingInFileNames": true, 
      "skipLibCheck": true,
      "typeRoots": ["./node_modules/@types", "./types"]
    },
    "include": ["src"],
    "exclude": ["node_modules"]
  }